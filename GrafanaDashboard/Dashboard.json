{ "title": "Information for Node and Pod",
  "panels": [
    {
      "title": "Node CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(node_cpu_seconds_total{mode!=\"idle\"}[5m])) by (instance) * 100",
          "legendFormat": "CPU Usage - {{instance}}"
        }
      ],
      "description": "Node CPU Usage Percentage"
    },
    {
      "title": "Node Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
          "legendFormat": "Memory Usage - {{instance}}"
        }
      ],
      "description": "Node Memory Usage Percentage"
    },
    {
      "title": "Node Disk Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "100 - ((node_filesystem_avail_bytes{mountpoint=\"/\",fstype!=\"rootfs\"} * 100) / node_filesystem_size_bytes{mountpoint=\"/\",fstype!=\"rootfs\"})",
          "legendFormat": "Disk Usage - {{instance}}"
        }
      ],
      "description": "Node Disk Usage Percentage"
    },
    {
      "title": "Node Status",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(kube_node_status_condition{condition=\"Ready\",status=\"true\"}) by (instance)",
          "legendFormat": "Ready Nodes"
        }
      ],
      "description": "Number of Ready Nodes"
    },
    {
      "title": "Node Network I/O",
      "type": "timeseries",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m])",
          "legendFormat": "Received - {{instance}}"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[5m])",
          "legendFormat": "Transmitted - {{instance}}"
        }
      ],
      "description": "Node Network I/O Bytes/sec"
    },
    {
      "title": "Pod CPU Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\"}[5m])) by (pod)",
          "legendFormat": "CPU Usage - {{pod}}"
        }
      ],
      "description": "Pod CPU Usage Cores"
    },
    {
      "title": "Pod Memory Usage",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{container!=\"\"}) by (pod)",
          "legendFormat": "Memory Usage - {{pod}}"
        }
      ],
      "description": "Pod Memory Usage Bytes"
    },
    {
      "title": "Pod Network Traffic",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (pod)",
          "legendFormat": "Received - {{pod}}"
        },
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (pod)",
          "legendFormat": "Transmitted - {{pod}}"
        }
      ],
      "description": "Pod Network I/O Bytes/sec"
    },
    {
      "title": "Pod Status",
      "type": "gauge",
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase) by (phase)",
          "legendFormat": "{{phase}}"
        }
      ],
      "description": "Pod Status Distribution"
    },
    {
      "title": "Pod Restart Count",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(kube_pod_container_status_restarts_total) by (pod)",
          "legendFormat": "Restarts - {{pod}}"
        }
      ],
      "description": "Pod Restart Count"
    },
    {
      "title": "Network Spikes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (pod)",
          "legendFormat": "Inbound {{pod}}"
        },
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (pod)",
          "legendFormat": "Outbound {{pod}}"
        }
      ],
      "description": "Network Traffic Spikes"
    }
    },
    {
      "title": "Network Receive Bytes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[5m])) by (pod)",
          "legendFormat": "Inbound {{pod}}"
        }
      ],
      "description": "Network Inbound Traffic by Pod",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Network Transmit Bytes",
      "type": "timeseries",
      "targets": [
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[5m])) by (pod)",
          "legendFormat": "Outbound {{pod}}"
        }
      ],
      "description": "Network Outbound Traffic by Pod",
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    }
  ]
}